{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "rootDirs": ["src"],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "allowJs": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": false,
      "noEmit": true
    },
    "include": ["src"],
  }